<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="false" android:state_pressed="false">
        <layer-list>
            <item>
                <shape android:shape="oval"
                android:innerRadius="@dimen/background_size"
                android:tint="@color/button_background_color"/>
            </item>
            <item
                android:drawable="@drawable/ic_play"
                android:width="40dp"
                android:height="40dp"/>
        </layer-list>
    </item>

    <item android:state_selected="false" android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="oval"
                    android:innerRadius="@dimen/background_size"
                    android:tint="@color/button_background_color_pressed"/>
            </item>
            <item
                android:drawable="@drawable/ic_play"
                android:width="40dp"
                android:height="40dp"/>
        </layer-list>
    </item>

    <item android:state_selected="true" android:state_pressed="false">
        <layer-list>
            <item>
                <shape android:shape="oval"
                    android:innerRadius="@dimen/background_size"
                    android:tint="@color/button_background_color"/>
            </item>
            <item
                android:drawable="@drawable/ic_stop"
                android:width="40dp"
                android:height="40dp">
            </item>
        </layer-list>
    </item>

    <item android:state_selected="true" android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="oval"
                    android:innerRadius="@dimen/background_size"
                    android:tint="@color/button_background_color_pressed"/>
            </item>
            <item
                android:drawable="@drawable/ic_stop"
                android:width="40dp"
                android:height="40dp"/>
        </layer-list>
    </item>

</selector>